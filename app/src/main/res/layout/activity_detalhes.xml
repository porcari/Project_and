<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fatec.br_bus.Controller.DetalhesActivity"
    android:background="@drawable/plano_fundo">

    <Button
        android:id="@+id/btn_alterar"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:text="ALTERAR"
        android:background="@drawable/layout_botao"
        android:nestedScrollingEnabled="false"
        android:enabled="true"
        android:layout_above="@+id/btn_excluir"
        android:layout_alignParentStart="true"
        android:onClick="ClickbtnAlterar" />
    <Button
        android:id="@+id/btn_excluir"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:text="EXCLUIR"
        android:background="@drawable/layout_botao"
        android:nestedScrollingEnabled="false"
        android:enabled="true"
        android:onClick="ClickbtnExcluir"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/btn_alterar"
        android:layout_below="@+id/textView2"
        android:background="@drawable/layout_botao" />
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LINHA"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:text="VOLTAR"
        android:background="@drawable/layout_botao"
        android:nestedScrollingEnabled="false"
        android:enabled="true"
        android:onClick="ClickbtnVoltar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
