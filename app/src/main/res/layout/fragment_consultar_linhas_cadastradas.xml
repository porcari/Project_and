<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fatec.br_bus.Controller.ConsultarLinhasCadastradasActivity$PlaceholderFragment"
    android:background="@drawable/layout_fundo"
    android:onClick="ClickbtnViewDetalhes">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lb_linha"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:text="*" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lb_linhaInfo"
        android:layout_below="@+id/lb_linha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:text="*"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="*"
        android:id="@+id/lb_linhaStatus"
        android:layout_below="@+id/lb_linhaInfo"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cadastrar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="ClickbtnCadastro"
        android:text="cadastrar"
        android:background="@drawable/layout_botao"
        android:textColor="#ffffff"
        android:textStyle="bold"/>

</RelativeLayout>
